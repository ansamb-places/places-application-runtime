doctype html
html
    head
        meta(name="viewport",content="width=device-width, initial-scale=1.0")
        title Places
        link(rel="stylesheet",type="text/css",href="/css/normalize.css")
        link(rel="stylesheet",type="text/css",href="/css/animate.css")
        link(rel="stylesheet",type="text/css",href="/css/magic_animation.css")
        link(rel="stylesheet",type="text/css",href="/css/main.css")
        link(rel="stylesheet",type="text/css",href="/css/entypo.css")
        link(rel="stylesheet",type="text/css",href="/css/foundation.min.css")
        link(rel="stylesheet",type="text/css",href="/css/foundation-icons.css")
        link(rel="stylesheet",type="text/css",href="/css/jquery-ui.min.css")
        link(rel="stylesheet",type="text/css",href="/css/app.css")
        link(rel="stylesheet",type="text/css",href="/css/animation_spinners.css")
        link(rel="stylesheet",type="text/css",href="/css/tipTip.css")
        //- link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,600,700',rel='stylesheet',type='text/css')
        //- script(src="/js/vendor/modernizr.js").
        link(rel="stylesheet",type="text/css",href="/css/page-loader/component.css")
        script(type="text/javascript",src="/js/vendor/jquery.js")
        script(type="text/javascript",src="/js/vendor/macbuiltin_menu.js")
        script(type="text/javascript").
            window.rootUrl = 'http://#{host}'
    body
        //- div.row.main-container 54CFF5
        div.fixed
            div#p-top-bar
                //- nav.top-bar.p-top-bar(style="text-align : center; ")
                nav.top-bar.p-top-bar(style="text-align : left; ")
                    div.row
                        div.medium-3.columns.left-header
                            span
                                img.p-places-logo(src="/images/places-beta.png", style="height : 30px ; padding-left : 16% ;" onmousedown="return false;")
        div.row#p-main-content.background-sky(style="padding-left : 4% ; padding-right : 4% ;")
                div#p-init-page-container
                    - if (messages)
                        - if (messages.err)
                            div(data-alert class="alert-box p-request-alert-box")
                                each msg in messages.err
                                    li= msg.mesg
                                a(href="#" class="close") &times;
                        - if (messages.info)
                            div(data-alert class="alert-box p-request-info-box")
                                each msg in messages.info
                                    li= msg.mesg
                                a(href="#" class="close") &times;
                    - else
                        div.p-request-alert-box.no-visible
                        div.p-request-info-box.no-visible
                    block place-content
            span(data-icon="l" style="visibility:hidden; position:absolute;")
    script(type='text/javascript').
        $('.close').on('click', function(e){
            $(e.target.parentElement).hide()
        });