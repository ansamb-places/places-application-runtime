extends templates/empty_layout
block title
	|Places Account Check
block place-content
	div.p-single-content-container
		div.large-3.columns.center
			|Checking account status ...
			div.progress
				span.meter#progressbar
	script(type="text/javascript").
		window.step='account_check';
		window.requireNode = window.require;
		window.require = undefined;
	script(type="text/javascript",src="/js/vendor/require.js",data-main="/js/application_init/boot.js")